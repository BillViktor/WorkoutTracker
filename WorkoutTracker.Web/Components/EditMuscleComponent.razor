@if (IsVisible)
{
    <div class="backdrop">
        <div class="dialog">
            <h3>Edit Muscle</h3>

            <EditForm Model="Muscle" OnValidSubmit="async () => await OnConfirm.InvokeAsync(true)">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <p>
                    <label for="muscleName">Name</label>
                    <input class="w-100" type="text" id="muscleName" @bind="Muscle.Name" placeholder="Enter muscle name" />
                </p>

                <p>
                    <label for="muscleDescription">Description</label>
                    <textarea rows="10" class="w-100" id="muscleDescription" @bind="Muscle.Description" placeholder="Enter muscle description"></textarea>
                </p>

                <p>
                    <label for="muscleImageUrl">Image</label>
                    <input class="w-100" type="url" id="muscleImageUrl" @bind="Muscle.ImageUrl" disabled placeholder="Enter image URL" />
                </p>

                <div class="row justify-content-end gap-1">
                    <button type="submit" class="button-success">Save Changes</button>
                    <button @onclick="async () => await OnConfirm.InvokeAsync(false)" class="button-warning">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter]
    public MuscleDto Muscle { get; set; }

    [Parameter]
    public bool IsVisible { get; set; } = false;

    [Parameter]
    public EventCallback<bool> OnConfirm { get; set; }
}